FileSet {
  Name = "<%= @name %>"

<% @includes.each do |item| -%>
  Include {
<% item.fetch('options', []).each do |option| -%>
    Options {
<% option.each do |key, values| -%>
<% [*values].each do |value| -%>
      <%= key %> = <%= (/\w+/ =~ value) ? value : value.inspect %>
<% end -%>
<% end -%>
    }
<% end -%>
<% item.fetch('files').each do |file| -%>
    File = <%= file.inspect %>
<% end -%>
  }
<% end -%>

  Exclude {
<% @excludes.each do |file| -%>
    File = <%= file.inspect %>
<% end -%>
  }
}
